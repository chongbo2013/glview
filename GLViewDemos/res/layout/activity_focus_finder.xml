<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:glview="http://schemas.android.com/apk/res-auto"
    glview:layout_width="match_parent"
    glview:layout_height="match_parent"
    glview:gravity="center"
    glview:clipToPadding="true"
    glview:orientation="vertical" >

    <LinearLayout 
        glview:layout_width="wrap_content"
        glview:layout_height="wrap_content"
        glview:orientation="vertical" >
        <Button 
	        glview:layout_width="200dp"
	        glview:layout_height="300dp"
	        glview:textSize="@dimen/text_size_1"
	        glview:padding="10dp"
	        glview:elevation="10dp"
	        glview:background="@drawable/btn_default"
	        glview:singleLine="true"
	        glview:focusable="true"
	        glview:focusableInTouchMode="true"
	        glview:ellipsize="marquee"
	        glview:marqueeRepeatLimit="marquee_forever"
	        glview:text="Text1Text1Text1Text1Text1Text1Text1Text1Text1Text1" />
    </LinearLayout>
